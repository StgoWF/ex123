<h1>Your Dashboard</h1>



{{#if posts.length}}
    {{#each posts}}
        <div class="post">
            <h2>{{this.title}}</h2>
            <p>{{this.content}}</p>
            <a href="/posts/{{this.id}}" class="btn">Read More & Comment</a>
            <!-- Options to edit and delete own posts -->
            <a href="/posts/edit/{{this.id}}" class="btn">Edit</a>
            <form action="/posts/delete/{{this.id}}" method="POST" style="display: none;" id="delete-post-{{this.id}}">
                <input type="hidden">
            </form>
            <a href="#" class="btn" onclick="document.getElementById('delete-post-{{this.id}}').submit();">Delete</a>

        </div>

    {{/each}}
        <!-- Button to add new posts, always visible at the top of the dashboard page -->
        <div class="dashboard-controls">
            <a href="/posts/new" class="btn-add-post">+ New Post</a>
        </div>  
{{else}}
    <!-- Message for when there are no posts and direct link to create a new post -->
    <p>No posts yet. <a href="/posts/new" class="btn-add-post">Create one</a>!</p>
{{/if}}
